---
import SEO from "@/components/SEO.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { ClientRouter } from "astro:transitions";

interface Preload {
    as: string;
    href: string;
    type: string;
    rel?: "preload" | "prefetch";
    crossorigin?: string;
}

interface Props {
    title: string;
    description: string;
    preload?: Array<Preload>;
    canonical?: string;
    image?: string;
}

const { title, description, preload, canonical, image } = Astro.props;
import "@/styles/globals.css";
---

<!doctype html>
<html lang="es">
    <head>
        <SEO
            canonical={canonical}
            description={description}
            image={image}
            preload={preload}
            title={title}
        />
        <ClientRouter />
    </head>
    <body
        class="relative -z-30 antialiased flex flex-col min-h-screen bg-lime-100"
    >
        <Header />
        <main class="relative flex-grow -z-20">
            <div
                class="absolute -z-10 h-full w-full bg-[radial-gradient(#3f3f46_1px,transparent_2px)] [background-size:16px_16px] [mask-image:radial-gradient(ellipse_50%_50%_at_50%_50%,#000_70%,transparent_100%)] opacity-15"
            >
            </div>
            <slot />
        </main>
        <Footer />
    </body>
</html>

<style>
    html {
        scroll-behavior: smooth;
    }
    ,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
    }
</style>
